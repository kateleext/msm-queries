<h1>
  Actor #<%=@actor.id%> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%=@actor.image%> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@actor.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@actor.updated_at%>
  </dd>

  <hr>
</dl>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

<%@filmography.each do |movie|%>
<tr>
    <td>
      <%=movie.id%>  
    </td>

    <td>
      <%=movie.title%>
    </td>

    <td>
      <%=movie.year%>
    </td>

    <td>
      <%=Director.all.where(:id=>movie.director_id).first.name%>
    </td>

    <td>
      <a href=<%="/movies/#{movie.id}"%>>
        Show details
      </a>
    </td>
  </tr>
<%end%>
</table>
