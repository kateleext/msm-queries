<h2>List of all movies</h2>
<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

<%@list_of_movies.each do |movie|%>
<tr>
    <td>
      <%=movie.id%>  
    </td>

    <td>
      <img src=<%=movie.image%> style = "width:250px">
    </td>

    <td>
      <%=movie.title%>
    </td>

    <td>
      <%=movie.year%>
    </td>

    <td>
      <%=Director.all.where(:id=>movie.director_id).first.name%>
    </td>

    <td>
      <a href=<%="/movies/#{movie.id}"%>>
        Show details
      </a>
    </td>
  </tr>
<%end%>
</table>
